<config>
    <api>
        <resources>
            <bot_queue translate="title" module="bot">
                <model>bot/queue_api</model>
                <title>Bot Queue API</title>
                <acl>bot/queue</acl>
                <methods>
                    <message translate="title" module="bot">
                        <title>Send a message to the queue</title>
                        <acl>bot/queue/message</acl>
                    </message>
                </methods>
            </bot_queue>
        </resources>
        <acl>
            <resources>
                <bot translate="title" module="bot">
                    <title>Gamuza Bot API</title>
                    <sort_order>0</sort_order>
                    <queue translate="title" module="bot">
                        <title>Queue</title>
                        <message translate="title" module="bot">
                            <title>Send a message to the queue</title>
                        </message>
                    </queue>
                </bot>
            </resources>
        </acl>
    </api>
</config>

