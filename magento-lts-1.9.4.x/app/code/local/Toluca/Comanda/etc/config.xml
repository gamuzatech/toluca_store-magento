<config>
    <modules>
        <Toluca_Comanda>
            <version>0.0.1</version>
        </Toluca_Comanda>
    </modules>
    <global>
        <helpers>
            <comanda>
                <class>Toluca_Comanda_Helper</class>
            </comanda>
        </helpers>
        <blocks>
            <comanda>
                <class>Toluca_Comanda_Block</class>
            </comanda>
        </blocks>
        <models>
            <comanda>
                <class>Toluca_Comanda_Model</class>
                <resourceModel>comanda_mysql4</resourceModel>
            </comanda>
            <comanda_mysql4>
                <class>Toluca_Comanda_Model_Mysql4</class>
                <entities>
                    <mesa>
                        <table>toluca_comanda_mesa</table>
                    </mesa>
                </entities>
            </comanda_mysql4>
        </models>
        <resources>
            <comanda_setup>
                <setup>
                    <module>Toluca_Comanda</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </comanda_setup>
            <comanda_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </comanda_write>
            <comanda_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </comanda_read>
        </resources>
        <fieldsets>
            <sales_convert_quote>
                <is_comanda>
                    <to_order>*</to_order>
                </is_comanda>
            </sales_convert_quote>
            <sales_convert_order>
                <is_comanda>
                    <to_quote>*</to_quote>
                </is_comanda>
            </sales_convert_order>
        </fieldsets>
    </global>
    <admin>
        <routers>
            <admin_comanda>
                <use>admin</use>
                <args>
                    <module>Toluca_Comanda</module>
                    <frontName>admin_comanda</frontName>
                </args>
            </admin_comanda>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <comanda>
                    <file>toluca/comanda.xml</file>
                </comanda>
            </updates>
        </layout>
        <translate>
            <modules>
                <Toluca_Comanda>
                    <files>
                        <default>Toluca_Comanda.csv</default>
                    </files>
                </Toluca_Comanda>
            </modules>
        </translate>
    </adminhtml>
</config>

